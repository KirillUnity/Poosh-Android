<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/record_view_text_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/record_view_recording_title"
        android:layout_gravity="center_horizontal|top"
        android:textSize="32sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/record_view_text_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/record_view_help_title"
        android:layout_gravity="center_horizontal|top"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right|center_vertical">

        <FrameLayout
            android:id="@+id/record_view_button_group"
            android:layout_width="@dimen/record_button_max_size"
            android:layout_height="@dimen/record_button_max_size"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/record_button_min_size">

            <ImageView
                android:id="@+id/record_view_voice_force"
                android:layout_width="@dimen/record_button_max_size"
                android:layout_height="@dimen/record_button_max_size"
                android:src="@drawable/record_button_pulse"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/record_view_button"
                android:layout_width="@dimen/record_button_min_size"
                android:layout_height="@dimen/record_button_min_size"
                android:background="@drawable/record_button"
                android:src="@drawable/ic_mic"
                android:layout_gravity="center"
                />

        </FrameLayout>

    </FrameLayout>

</FrameLayout>